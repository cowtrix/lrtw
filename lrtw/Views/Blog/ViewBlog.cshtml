@{
	ViewData["Title"] = "View";
}

@model Blog


<div class="container">
	<div class="card text-white bg-dark">
		@if (!string.IsNullOrEmpty(Model.ImagePath))
		{
			<div class="card-img-top blog-img-container">
				<img class="blog-img" src="@Model.ImagePath" alt="Blog header image">
			</div>
		}
		<div class="card-header">
			<h3>@Model.Title</h3>
			<div class="row justify-content-end">
				<small class="text-white-50 col-auto">Submitted @Model.TimeCreatedUTC.ToShortDateString()</small>
				@{
					if (Model.LastEditedUTC.Date > Model.TimeCreatedUTC.Date)
					{
						<small class="text-white-50 col-auto">Last Edited @Model.TimeCreatedUTC.ToShortDateString()</small>
					}
					<small class="text-white-50 col-auto">
						@foreach (var tag in Model.Tags)
						{
							<a href="~/?tag=@tag">#@tag</a>
						}
					</small>
				}
			</div>
		</div>
		<div class="card-body">
			@foreach (var prev in Model.Content.Skip(1))
			{
				@Html.Raw(Markdig.Markdown.ToHtml(prev));
			}
		</div>
	</div>
</div>
