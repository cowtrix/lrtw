@model IEnumerable<Gallery>

@foreach (var gallery in Model)
{
	<div class="card text-white bg-dark">
		<div class="card-img-top blog-img-container blog-img-container-sm gallery-container row">
			@foreach (var t in gallery.Files.Take(4))
			{
				<img class="gallery-thumb w-25 h-100" src="gallery/@t.URL" alt="Gallery thumbnail">
			}
		</div>
		<div class="card-header">
			<h3>@gallery.GalleryName</h3>
			<div class="row justify-content-end">
				<small class="text-white-50 col-auto">@(gallery.Files.Count()) images</small>
			</div>
		</div>
		<div class="card-body">
			@Html.Raw(StringExtensions.ToHtml(gallery.Content))
		</div>
		<a href="~/gallery/@gallery.Slug">
			<div class="card-footer text-center btn-secondary">
				See More...
			</div>
		</a>
	</div>
	<hr />
}